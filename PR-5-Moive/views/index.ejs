<%- include('header')%>

  <section class="hero">
    <div class="hero-content">
      <h1>Unlimited Movies, TV Shows & More</h1>
      <p>Watch anywhere. Cancel anytime.</p>
      <a href="/" class="hero-btn">Watch Movie</a>
    </div>
  </section>
  <section class="movie-section">
    <h2>Latest Movies</h2>

    <div class="movie-grid">

      <% if (Moive && Moive.length> 0) { %>
        <% Moive.forEach(movie=> { %>

          <div class="movie-card">
            <img src="<%= movie.posterImage %>" alt="movie" />

            <div class="movie-info">
              <h3>
                <%= movie.title %>
              </h3>
               <h5>
                <%= movie.description %>
              </h5>
              <p>
                ‚≠ê <%= movie.rating %> |
                  <%= movie.genre %>
              </p>
              <div class="card-actions">
                <a href="/edit-moive/<%= movie.id %>" class="edit-btn">Edit</a>
                <a href="/delete-moive/<%= movie.id %>" class="delete-btn">Delete</a>
              </div>
            </div>

          </div>

          <% }) %>
            <% } else { %>
              <p>No movies available</p>
              <% } %>

    </div>
  </section>



  <%- include('footer')%>